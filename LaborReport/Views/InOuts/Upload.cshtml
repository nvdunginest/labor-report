@model LaborReport.Controllers.FileUpload
@{
    ViewData["Title"] = "Upload Data";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UploadDate" class="control-label"></label>
                <input type="date" asp-for="UploadDate" class="form-control" />
                <span asp-validation-for="UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormFile" class="control-label"></label>
                <input type="file" asp-for="FormFile" class="form-control-file" accept="application/vnd.ms-excel" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <input type="submit" value="Upload" class="btn btn-primary btn-sm" />
        </form>
    </div>
</div>

